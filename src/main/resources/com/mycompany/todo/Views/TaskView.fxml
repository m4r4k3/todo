<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.todo.view.TasksView"
      style="-fx-background-color: #f5f7fa; -fx-border-radius: 12; -fx-background-radius: 12;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Tasks"
           style="-fx-font-size: 22px; -fx-font-weight: 600; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;" />

    <StackPane>
        <TextField fx:id="searchInput" promptText="Search tasks..."
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10 12 10 40; -fx-border-color: #ddd; -fx-font-size: 14px; -fx-effect: null;"
                   onKeyReleased="#handleSearch"
        />
        <Label text="ðŸ”"
               style="-fx-font-size: 16px; -fx-text-fill: #666;"
               StackPane.alignment="CENTER_LEFT">
            <StackPane.margin>
                <Insets left="12"/>
            </StackPane.margin>
        </Label>
    </StackPane>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Filter:" style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #34495e;"/>
        <ComboBox fx:id="filterComboBox" onAction="#handleFilterChange"
                  style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 5 10; -fx-border-color: #ddd; -fx-font-size: 12px; -fx-effect: null;"
                  prefWidth="120"/>
    </HBox>

    <ListView fx:id="taskList"
              style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 8; -fx-effect: null;"
              prefHeight="200" />

    <Button text="Ajouter" onAction="#handleShowAddTaskForm"
            style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand; -fx-effect: null;">
        <VBox.margin>
            <Insets top="10" right="0" bottom="0" left="0" />
        </VBox.margin>
    </Button>
</VBox>